<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.personalize.ui.fragment.PersonalizeOptionsFragment"
    android:background="@color/color_surface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_none"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:indeterminate="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLine"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                android:background="@drawable/line_options"
                android:layout_marginHorizontal="@dimen/margin_medium_x_14"
                app:layout_constraintTop_toTopOf="@id/btnSkip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSkip"
                app:layout_constraintBottom_toBottomOf="@id/btnSkip"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_skip"
                android:fontFamily="@font/jetbrains_mono_regular"
                android:textSize="@dimen/text_small"
                android:textColor="@color/color_text_primary"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_medium_x_40"
                android:layout_marginEnd="@dimen/margin_medium_x_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                android:text="@string/personalize_option_title"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lines="2"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                android:layout_marginHorizontal="@dimen/margin_medium_x_16"
                style="@style/CustomFont_Black_Semi_Bold"
                app:layout_constraintTop_toBottomOf="@id/btnSkip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecipeDiet"
                style="@style/CustomFont_Black_Regular"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/recipe_diet_desc"
                android:layout_marginTop="@dimen/margin_medium_x_16"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDietRecipe"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvRecipeDiet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                android:layout_marginTop="@dimen/margin_medium_x_12"
                android:layout_marginStart="@dimen/margin_medium_x_10"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/item_view_diet_recipe"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAllergiesIngredient"
                style="@style/CustomFont_Black_Regular"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/allergies_ingredient"
                android:layout_marginTop="@dimen/margin_medium_x_30"
                app:layout_constraintTop_toBottomOf="@id/rvDietRecipe"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllergiesIngredient"
                android:layout_width="@dimen/margin_none"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium_x_10"
                android:layout_marginTop="@dimen/margin_medium_x_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAllergiesIngredient"
                tools:listitem="@layout/item_view_allergies_ingredient" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomFont_Button_Semi_Bold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:text="@string/lbl_continue"
        android:paddingTop="@dimen/margin_medium_x_10"
        android:layout_marginHorizontal="@dimen/margin_medium_x_16"
        android:layout_marginVertical="@dimen/margin_medium_x_35"
        android:backgroundTint="@color/color_btn_disable"
        />

</LinearLayout>