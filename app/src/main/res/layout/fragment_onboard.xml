<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_onboard_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOnBoardImage"
        android:layout_width="@dimen/margin_none"
        android:layout_height="@dimen/margin_none"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="W,2:1.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/onboard2" />

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo_square"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ivOnBoardImage"
        app:layout_constraintBottom_toBottomOf="@id/ivOnBoardImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        style="@style/CustomFont_Black_Semi_Bold"
        android:layout_height="wrap_content"
        tools:text="@string/onboarding1_title"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:lines="2"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:layout_marginHorizontal="@dimen/margin_medium_x_16"
        app:layout_constraintTop_toBottomOf="@id/ivOnBoardImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitle"
        style="@style/CustomFont_Black_Regular"
        android:layout_width="@dimen/margin_none"
        android:layout_height="wrap_content"
        tools:text="@string/onboarding1_text"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLogin"
        style="@style/CustomFont_Login_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_login"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium_x_16"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="@id/btnNext"
        app:layout_constraintBottom_toBottomOf="@id/btnNext"/>


    <LinearLayout
        android:id="@+id/slider_dots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_none"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/btnNext"
        app:layout_constraintBottom_toBottomOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomFont_Button_Semi_Bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_medium_x_30"
        android:text="@string/lbl_next"
        android:paddingTop="@dimen/value_padding"
        android:layout_marginEnd="@dimen/margin_medium_x_16"
        android:backgroundTint="@color/color_primary"
        />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CustomFont_Button_Semi_Bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_medium_x_30"
        android:text="@string/lbl_get_started"
        android:visibility="gone"
        android:paddingTop="@dimen/value_padding"
        android:backgroundTint="@color/color_primary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>