<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nutrition_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/nutrition_amt_tv"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:ellipsize="end"
        android:text="Fat"
        android:textSize="16sp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:id="@+id/nutrition_amt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nutrition_tv"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="25.6g"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/daily_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="31 %"
        android:layout_alignTop="@id/nutrition_tv"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"/>

    <View
        android:id="@+id/gray_bg"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_below="@id/nutrition_tv"
        android:layout_alignStart="@id/nutrition_tv"
        android:layout_alignParentEnd="true"
        android:background="@color/gray" />

</RelativeLayout>